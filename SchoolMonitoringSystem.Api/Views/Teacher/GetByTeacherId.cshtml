@using SchoolMonitoringSystem.Application.UseCases
@model GetTeacherWithSubjectsDto

<!DOCTYPE html>
<html>
<head>
    <title>O'qituvchilar Ro'yxati</title>
      <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f2f2f2;
            margin: 0;
            padding: 20px;
        }
        
        .details-form {
            background-color: #fff;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            padding: 20px;
            max-width: 500px;
            margin: 0 auto;
        }
        
        h2 {
            font-size: 24px;
            margin-bottom: 20px;
            color: #333;
        }
        
        p {
            margin: 10px 0;
            color: #555;
        }
        
        strong {
            font-weight: bold;
        }

        body {
            margin: 0;
            padding: 0;
        }

        .full-page-background {
            background-image: url('/images/340434.jpg');
            background-size: cover;
            background-position: center;
            height: 100vh;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            color: black;
            text-align: center;
            font-size: 1.5rem;
        }

        .align-content-xl-center {
            display: flex;
            flex-wrap: wrap;
            align-content: center;
            justify-content: center;
            height: 100%;
        }

        .display-4 {
            margin-bottom: 1rem;
            font-size: 3rem;
            font-weight: bold;
        }

        .social-links {
            display: flex;
            gap: 1rem;
            margin-top: 1rem;
        }

            .social-links a {
                color: black;
                text-decoration: none;
            }
    </style>
</head>

<body> 
    <div class="full-page-background">
    <div class="details-form" data-student-id="@Model.Id">
        <h2>Talaba ma'lumotlari</h2>

        <img decoding="async" src="@Url.Content("~/" + @Model.Img)" width="250px" height="250px" />
        <p><strong>Ism:</strong> @Model.FirstName</p>
        <p><strong>Familiya:</strong> @Model.LastName</p>
        <p><strong>Tug'ilgan sanasi:</strong> @Model.BirthDate</p>
        <p><strong>Elektron pochta:</strong> @Model.Email</p>
        <p><strong>Telefon raqami:</strong> @Model.PhoneNumber</p>
        <strong>Darslar:</strong>
           <ul>
               @foreach (var subject in Model.Subjects.Where(s => s.TeacherId == Model.Id))
               {
                   <li>@subject.SubjectName</li>
               }
           </ul>
    </div>

    <div class="d-flex justify-content-between">
                <a href="/teacher/getallteachers" class="btn btn-info"><i class="fas fa-arrow-left"></i> Orqaga</a>
    </div>
    </div>
</body>
</html>

